<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="4"
        app:columnCount="4"
        app:alignmentMode="alignBounds"
        app:useDefaultMargins="true"
        android:background="#00FFFFFF">
        <TextView
            android:id="@+id/key_1"
            android:text="1"
            android:gravity="center"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="8"
            />
        <!-- KeyEvent.KEYCODE_1 = 8 -->
        <TextView
            android:id="@+id/key_2"
            android:text="2"
            android:gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="9"
            />
        <TextView
            android:id="@+id/key_3"
            android:text="3"
            android:gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="10"
            />
        <TextView
            android:id="@+id/key_cancel"
            android:text="Cancel"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="@color/cancel"
            android:tag="111"
            />
        <TextView
            android:id="@+id/key_4"
            android:text="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="11"
            />
        <TextView
            android:id="@+id/key_5"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="12"
            />
        <TextView
            android:id="@+id/key_6"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="13"
            />
        <TextView
            android:id="@+id/key_clear"
            android:text="Clear"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="@color/clear"
            android:tag="28"
            />
        <TextView
            android:id="@+id/key_7"
            android:text="7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="14"
            />
        <TextView
            android:id="@+id/key_8"
            android:text="8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="15"
            />
        <TextView
            android:id="@+id/key_9"
            android:text="9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="16"
            />
        <TextView
            android:id="@+id/key_enter"
            android:text="Enter"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_rowSpan="2"
            android:gravity="center"
            android:background="@color/enter"
            android:tag="66"
            />
        <TextView
            android:text=""
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/key_0"
            android:text="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="@color/pastel_text_color_on_light"
            android:tag="7"
            />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>