<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.paxus.pay.poslinkui.demo.view.ClssLightsView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clss_light"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/merchant"
            android:gravity="start"
            android:text="@string/prompt_merchant"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/merchantName"
            android:layout_alignParentEnd="true"
            android:gravity="end"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_amount"
            android:gravity="start"
            android:text="@string/total_amount"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount_view"
            android:layout_alignParentEnd="true"
            android:gravity="end"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manual_message"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_account"
        android:hint=""
        android:inputType="numberSigned"
        android:digits="0123456789 "
        android:layout_margin="20dp"
        android:gravity="end"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/insert"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tap"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/swipe"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/nfc"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/tap"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/apple"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/apple_pay"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/google"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/google_pay"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/samsung"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/samsung_pay"/>
    </LinearLayout>
</LinearLayout>