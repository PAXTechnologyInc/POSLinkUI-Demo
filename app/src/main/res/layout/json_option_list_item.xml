<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_gap"
    android:minHeight="@dimen/button_height"
    android:background="@drawable/option_item_background"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckedTextView
        tools:text="Title"
        tools:textColor="@color/black"

        android:id="@+id/json_option_item_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/margin_gap"

        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@drawable/option_item_text_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/json_option_item_subtitle"
        />

    <CheckedTextView
        tools:text="Subtitle"
        tools:textColor="@color/black"

        android:id="@+id/json_option_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_gap"

        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@drawable/option_item_text_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/json_option_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
