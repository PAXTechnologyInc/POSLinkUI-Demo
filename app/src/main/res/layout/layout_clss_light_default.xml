<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <com.paxus.pay.poslinkui.demo.view.ClssLight
        android:id="@+id/light1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/light_blue"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_desc"
        android:layout_marginHorizontal="@dimen/default_gap" />

    <com.paxus.pay.poslinkui.demo.view.ClssLight
        android:id="@+id/light2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/light_yellow"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_desc"
        android:layout_marginHorizontal="@dimen/default_gap" />

    <com.paxus.pay.poslinkui.demo.view.ClssLight
        android:id="@+id/light3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/light_green"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_desc"
        android:layout_marginHorizontal="@dimen/default_gap" />

    <com.paxus.pay.poslinkui.demo.view.ClssLight
        android:id="@+id/light4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/light_red"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_desc"
        android:layout_marginHorizontal="@dimen/default_gap" />

</LinearLayout>
