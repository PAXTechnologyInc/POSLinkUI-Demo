<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/base_amount_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|left"
            android:visibility="gone">
            <TextView
                android:text="Amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/base_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tips_summary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/summary_tip1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:visibility="gone">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_item_tip1"
                    android:id="@+id/summary_tip1_name"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/summary_tip1_amt"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/summary_tip2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:visibility="gone">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_item_tip2"
                    android:id="@+id/summary_tip2_name"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/summary_tip2_amt"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/summary_tip3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="right"
                android:visibility="gone">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_item_tip2"
                    android:id="@+id/summary_tip3_name"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/summary_tip3_amt"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginVertical="@dimen/space_between_textview"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/options_layout"
        style="@style/POSLinkUIPastel"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tip"
        android:inputType="numberSigned"
        android:digits="0123456789,.$â‚¬"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_button"
        android:text="@string/confirm"/>
</LinearLayout>
</ScrollView>