<resources>
    <!-- Base application theme. -->
    <style name="NoAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="searchHintIcon">@null</item>
    </style>


    <style name="POSLinkUIPastel" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:textColor">@color/pastel_text_color</item>
        <item name="colorPrimary">@color/pastel_primary</item>
        <item name="colorPrimaryDark">@color/pastel_background</item>
        <item name="colorSecondary">@color/pastel_secondary</item>
        <item name="colorAccent">@color/pastel_accent</item>
        <item name="android:statusBarColor">@color/pastel_background</item>

        <item name="colorError">@color/pastel_warning</item>
        <!--overriding default widget styles-->
        <item name="editTextStyle">@style/POSLinkUIPastelEditText</item>
        <item name="radioButtonStyle">@style/POSLinkUIPastelRadioButton</item>
        <item name="checkboxStyle">@style/POSLinkUIPastelCheckBox</item>
        <item name="android:textViewStyle">@style/POSLinkUIPastelTextView</item>
    </style>

    <style name="POSLinkUIPastelTextView" parent="android:Widget.Material.TextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizePresetSizes">@array/text_auto_size_valid_sizes</item>
    </style>

    <style name="POSLinkUIPastelEditText" parent="android:Widget.Material.EditText">
        <item name="android:background">@drawable/rounded_corner_on_background</item>
        <item name="android:textColor">@color/pastel_text_color_on_light</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="POSLinkUIPastelRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/pastel_text_color</item>
        <item name="android:textColor">@color/pastel_text_color</item>
    </style>

    <style name="POSLinkUIPastelCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/pastel_text_color</item>
        <item name="android:textColor">@color/pastel_text_color</item>
    </style>

    <style name="POSLinkUIPastelDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/pastel_background</item>
        <item name="backgroundTint">@color/pastel_background</item>
        <item name="android:textColor">@color/pastel_text_color</item>
        <item name="colorPrimary">@color/pastel_primary</item>
        <item name="colorSecondary">@color/pastel_secondary</item>
        <item name="colorError">@color/pastel_warning</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/margin_gap</item>
        <item name="android:backgroundDimAmount">.8</item>
    </style>

</resources>